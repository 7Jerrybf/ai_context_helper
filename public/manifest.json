{
    "manifest_version": 3,
    "name": "AI Context Helper",
    "version": "1.0.0",
    "description": "Experience AI-powered context insights with a premium, modern interface. Select text and get instant explanations.",
    "permissions": [
        "storage",
        "activeTab",
        "contextMenus"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "vite.svg",
            "48": "vite.svg",
            "128": "vite.svg"
        }
    },
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "vite.svg",
        "48": "vite.svg",
        "128": "vite.svg"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*",
                "*.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}